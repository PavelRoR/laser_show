.prices
    padding 52px 0
    background-color #edf0f2
    h3
        font-family pt serif caption
        font-size 56px
        font-weight bold
        font-style italic
        text-align center
        line-height 1
        color #4B0082
        margin-bottom 28px

.row
    padding 0 30px

.col
    width 31.33333%
    background-color #F7F7F7
    box-shadow 0 0 0 1px rgba(0,0,0,0.2)
    margin-bottom 30px
    text-align center
    position relative
    &:nth-child(2)
        margin-left 27px
        margin-right 27px
    img
        width 100%
    h4
    .number
        font-family 'Open Sans', sans-serif
        font-style normal
        font-weight 400
        color #4B0082
    h4
        font-size 22px
        padding 15px 15px 8px
    .number
        font-size 17px

.more
    font-family 'PT Serif Caption'
    font-weight 400
    font-style italic
    font-size 20px
    color #FFFFFF
    padding 11px 18px
    background linear-gradient(to bottom,#C98620 0%,#9756AD 100%)
    border 1px solid #6653BD
    border-radius 15px
    margin-top 16px

.h_price
    font-family 'pt serif caption'
    font-size 30px
    font-style normal
    font-weight bold
    line-height 1.4
    padding 8px 0
    color #F00

