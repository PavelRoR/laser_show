.order
    padding-top 57px
    padding-bottom 25px
    background-color #edf0f2
    .row
    .container
        overflow inherit
    h3
        font-family pt serif caption
        font-size 52px
        font-weight bold
        font-style italic
        text-align center
        line-height 1
        color #4B0082
        margin-bottom 30px

.inner_row_1
.inner_row_2
    padding 45px 0
    border-bottom 1px solid #ccc
    text-align center
.inner_row_1
    .col_1
        float left
        margin-right 25px
    .col_6
        float right
.inner_row_2
    .col_1
        float right
    .col_6
        float left
        margin-right 25px
    &:last-child
        border-bottom 0

.col_1
.col_6
    border-radius 30px
    box-shadow 0 0 50px rgba(0,0,0,0.5)
    height 105px

.col_1
    width 127px
    p
        color #800080
        font-family verdana, geneva, sans-serif
        font-size 72px
        font-weight 600
        line-height 102px

.col_6
    width 748px
    p
        font-family pt serif caption
        font-size 42px
        font-weight 400
        font-style italic
        padding-top 0px
        line-height 1
        padding-top 10px