.main
    overflow hidden
    width 100%
    height auto
    background-image url('../img/main_bg.jpg')
    background-repeat no-repeat
    background-position 50% 0
    background-size cover
    background-attachment fixed
    margin-top 61px
    position relative
    z-index 999
    padding-bottom 20px
    &:after
        content ''
        position absolute
        top 0
        left 0
        opacity 0.65
        background-color #000
        width 100%
        height 100%
        z-index -1
    .left
        width 60%
    .right
        width 40%

#main_logo
    display block
    width 15%
    height auto
    margin: 13px auto

h1
h2
    font-family: 'pt serif caption', sans-serif
    font-style italic
    font-weight 900
    text-align center
    color #fff
    line-height 1.3
    position relative
    margin-bottom 30px
    &:after
        position absolute
        content ''
        height 1px
        background-color #fff
        width 30%
        left 35%
        bottom -15px
    span
        background-color #ffff41
        color #000
        text-shadow: 1px 1px 1px #5f5f0b

h1
    font-size 47px

h2
    font-size 32px

#boolits
    padding-top 30px
    padding-bottom 20px
    li
        font-family "Helvetica Neue",Helvetica,Arial,sans-serif
        font-size 22px
        font-weight 600
        color #fff
        position: relative;
        margin: 10px 0 0 60px;
        display: inline-block;
        line-height: 1.4;
        padding-top: 14px;
        padding-left: 20px;
        &:before
            content url(../img/disc.png)
            position: absolute;
            top: 0;
            left: -60px;
        &:nth-child(2):before
            padding-top 20px

#upper_form
    background-color: rgba(255,150,3,0.83);
    padding: 23px;
    border-radius: 20px;
    border: 1px solid rgba(5,22,255,1);
    width: 318px;
    h3
        text-transform uppercase
        font-size 22px
        text-align center
        font-weight 400
        line-height 1.3
        margin-bottom 15px

    input[type=phone]
        display inline-block
        width 100%
        margin-bottom 20px
        height 30px
        padding-left 10px
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        border-radius: 4px;
        vertical-align: middle;
        font-size: 14px;
        line-height: 20px;
        color: #555555;

    input[type=submit]
        width 100%
        font-weight: 700;
        font-style: normal;
        font-size: 20px;
        text-transform uppercase
        color: #fff;
        padding: 15px 25px;
        background: linear-gradient(to bottom,#F55516 0%,#4D2369 100%);
        border-radius 15px

.label
    &:after
        content: '*'
        color #c00