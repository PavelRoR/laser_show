.menu
    position fixed
    top 0
    left 0
    width 100%
    z-index 9999
    background-image url('../img/menu_bg.jpg')
    background-position 50% 50%
    background-repeat repeat-x
    background-size cover
    box-shadow 0 2px 9px #000
    &:after
        content ''
        position absolute
        top 0
        left 0
        opacity 0.46
        background-color #000
        width 100%
        height 100%
        z-index -1
    .container
        padding 11px 73px 0

.logo
    margin-right 85px
    img
        max-width 36px
        height auto
        margin 0 auto
        display block

#menu
    li
        float left
        display inline-block
        margin 8px 24px 0
        a
            color #FF8C00
            font-size 22px
            text-align center
.tel
    p
        color #fff0f5
        font-size 26px
        text-align right
        padding-top 0px
        line-height 1
        margin-top -5px