.advantages
    background-image url(../img/'advantages_bg.jpg')
    background-position 50% 0
    background-repeat no-repeat
    background-attachment fixed
    padding-bottom 20px
    position relative
    z-index 999
    overflow hidden
    width 100%
    height auto
    &:after
        content ''
        position absolute
        width 100%
        height 100%
        background #000
        opacity 0.65
        z-index -1
        top 0
        left 0
    .left
    .right
        width 50%
        padding 0 25px

    h3
        font-family pt serif caption
        font-size 42px
        font-weight normal
        font-style italic
        text-align center
        line-height 1
        color #fff
        padding 20px 0 60px

.ads
    color #fff
    li
        overflow hidden
        &:before
            content url('../img/check.png')
            float left
            margin-right 25px
            margin-bottom 88px
        h4
            font-size 22px
            text-decoration underline
            margin-bottom 20px
            font-weight normal
        p
            font-size 17px
            margin-bottom 35px
            line-height 1.4