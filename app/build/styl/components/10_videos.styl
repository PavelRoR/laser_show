.videos
    padding-top 45px
    padding-bottom 45px
    background-color #edf0f2
    .container
        width 630px
    h3
        font-family pt serif caption
        font-size 52px
        font-weight bold
        font-style italic
        text-align center
        line-height 1
        color #4B0082
        margin-bottom 30px
    img
        border 2px solid #fff
        border-radius 3px
        cursor pointer

.box_holder
    display none
    position fixed
    background rgba(0,0,0,.4)
    top 0
    left 0
    width 100%
    height 100%
    z-index 9999
    iframe
        display block
        margin 60px auto
        width 650px
        height 350%px
        border 5px solid #fff

.v_close
    position absolute
    top 35px
    left calc(50% + 352px)