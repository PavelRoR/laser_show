.photos
    padding-top 45px
    padding-bottom 45px
    background-color #252830
    h3
        font-family pt serif caption
        font-size 48px
        font-weight normal
        font-style italic
        text-align center
        line-height 1
        color #FFF0F5
        padding 20px 0 60px
    .col_30
        float left
        img
            width 100%
            height 205px
        &:nth-child(2)
            margin-left 27px
            margin-right 27px
        &:last-child
            float right

.pic_trigger
    display block
    width 100%
    height 100%
    position relative
    cursor pointer
    &:hover 
        .zoom
            opacity 1
            transition all .6s ease

.zoom
    position absolute
    width inherit
    height inherit
    top 0
    left 0
    background-color rgba(#000, .6)
    background-image url('../img/zoom.png')
    background-position center center
    background-repeat no-repeat
    opacity 0
    transition all .6s ease

.lightbox_pic
    width 500px
    height auto
    margin 80px auto
    border 2px solid #fff
    position relative
    img
        width 100%
        height 100% !important

.pic_close
    position absolute
    top 55px
    left calc(50% + 280px)