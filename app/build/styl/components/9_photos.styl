.photos
    padding-top 45px
    padding-bottom 45px
    background-color #252830
    h3
        font-family pt serif caption
        font-size 48px
        font-weight normal
        font-style italic
        text-align center
        line-height 1
        color #FFF0F5
        padding 20px 0 60px
    .col_30
        float left
        img
            width 100%
            height 205px
        &:nth-child(2)
            margin-left 27px
            margin-right 27px
        &:last-child
            float right

.pic_trigger
    display block
    width 100%
    height 100%
    position relative
    &:hover:after
        position absolute
        content ''
        width 100%
        height 100%
        top 0
        left 0
        background-color rgba(#000, .6)
        transition all .6s ease

.lightbox_pic
    width 500px
    height auto
    margin 80px auto
    border 2px solid #fff
    img
        width 100%
        height 100% !important