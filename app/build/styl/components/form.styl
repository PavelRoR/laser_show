.lightbox_bg
    display none
    position fixed
    top 0
    left 0
    z-index 99999
    width 100%
    height 100%
    background-color rgba(0, 0, 0, .7)
    overflow-y scroll

.lightbox
    max-width 960px
    background-color #FFFFFF
    border none
    border-radius 6px
    padding 20px 40px
    margin 50px auto
    .left
        width 50%
        text-align left
    h4
        font-size 22px
        font-variant-numeric inherit
        font-stretch inherit
        line-height 24px
        font-family "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
        word-break break-word
        word-wrap break-word
        color rgb(51, 51, 51)
        text-align center
        font-weight bold
        padding 0 0 20px
    img
        width 420px
        margin-right 30px
    ul
        font-size 16px
        text-align left
        li:before
            content '-'
            padding-right 5px
    p
        font-size 22px
        padding 25px 0  10px

.l_box_form
    padding 20px
    border-radius 6px
    border 1px solid rgba(204,204,204,1)
    width 460px
    background-color #fff
    overflow hidden
    margin 20px auto

    input
        display inline-block
        &[type=phone]
            background-color #ffffff
            border 1px solid #cccccc
            box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
            font-size 14px
            line-height 20px
            color #555555
            border-radius 4px
            vertical-align middle
            height 30px
            padding-left 10px

.l_box_submit
    font-weight 300
    font-style normal
    font-size 20px
    color #FFFFFF
    height 50px
    padding 10px 20px
    background #2084d6
    border none
    border-radius 5px
    padding-left 10px
    padding-top 10px

.close
    width 25px
    height 25px
    top 25px
    position absolute
    right 13%
    cursor pointer