.down_form
    background-image url('../img/down_form.jpg')
    background-position 50% 50%
    background-repeat no-repeat
    background-size cover
    background-attachment fixed
    position relative
    z-index 999
    padding-bottom 33px
    &:after
        content ''
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        background-color #000
        opacity .49
        z-index -1
    h3
        font-family: pt serif caption;
        font-style: italic;
        font-size 60px
        color #fff
        padding 35px 0 80px
        text-align center
    h4
        font-size 22px
        color #FFF0F5
        text-align center

.d_form
    background-color: rgba(255,150,3,0.75);
    padding: 23px;
    border-radius: 20px;
    border: 1px solid rgba(5,22,255,1);
    width: 440px;
    margin 33px auto

    input[type=phone]
        display inline-block
        width 100%
        margin-bottom 20px
        height 30px
        padding-left 10px
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        border-radius: 4px;
        vertical-align: middle;
        font-size: 14px;
        line-height: 20px;
        color: #555555;

    input[type=submit]
        width 100%
        font-weight: 700;
        font-style: normal;
        font-size: 20px;
        text-transform uppercase
        color: #fff;
        padding: 15px 25px;
        background: linear-gradient(to bottom,#F55516 0%,#4D2369 100%);
        border-radius 15px

.label
    &:after
        content: '*'
        color #c00