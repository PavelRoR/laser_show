mixin list_u(...items)
    ul&attributes(attributes)
            each item in items
                li= item

mixin l_box_1(id, src, alt, h4, ...its)
    .lightbox_bg(id= id)
                    .lightbox
                        .left
                            img(src= src, alt= alt)
                        .left
                            h4= h4 
                            +list_u(...its)
                        .clf
                        .l_box_form
                            include form
                    include close

mixin l_box_2(id, src, alt, h4, p, ...its2)
    .lightbox_bg(id= id)
                    .lightbox
                        .left
                            img(src= src, alt= alt)
                        .left
                            h4= h4 
                            +list_u(...its2)
                        .clf
                        p= p
                        .l_box_form
                            include form
                    include close

mixin pic_l_box(srcMin, alt, id,  src)
    .pic_trigger(data-id= id)
        img(src= srcMin, alt= alt)
        .zoom
    .lightbox_bg(id= id)
        .lightbox_pic
            img(src= src, alt= alt)
        .pic_close
            include close

mixin testims(src, alt, h4, href, pTown, p)
            .t_row
                img(src= src, alt= alt)
                h4= h4
                a(href= href, target="_blank")= href
                p.town= pTown
                .clf
            .t_row
                p.p_testim= p